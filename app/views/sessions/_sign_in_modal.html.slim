.modal
  label for='sign-in-modal'
    .modal-trigger Sign In

  input#sign-in-modal.modal-state type='checkbox'

  .modal-fade-screen
    .modal-inner
      .modal-close for='sign-in-modal'

      h1 Sign In

      = simple_form_for :session, url: signin_path, remote: true,
        data: { type: 'json' } do |f|

        = f.input :email
        = f.input :password
        = f.button :submit, 'Sign In'
